<resources>


    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Pointer to Overflow style ***MUST*** go here or it will not work -->
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionBarSize">70dp</item>

        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:panelBackground">@android:color/holo_green_light</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>

    </style>

    <style name ="MyPopupMenu" parent="android:Theme.Holo.Light">
        <item name="android:popupBackground">#F6F5DF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_ic</item>
        <item name="android:background">#343838</item>
    </style>



</resources>
